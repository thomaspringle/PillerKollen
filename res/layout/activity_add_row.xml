<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/add_row_medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF444444"
        android:text="@string/medicines_title_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/add_row_medicine_name_input"
        android:layout_below="@id/add_row_medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" 
        android:hint="@string/medicines_hint_name" />

    <ImageView
        android:id="@+id/add_row_imageView1"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/add_row_medicine_name_input"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/medicine_table_bg_light" />

    <TextView
        android:id="@+id/add_row_medicine_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_row_imageView1"
        android:textColor="#FF444444"
        android:text="@string/medicines_title_type"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
    <EditText
        android:id="@+id/add_row_medicine_type_input"
        android:layout_below="@id/add_row_medicine_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" 
        android:hint="@string/medicines_hint_type" />
        
<!--     <Spinner -->
<!--         android:id="@+id/add_row_medicine_type_spinner" -->
<!--         android:layout_width="match_parent" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:layout_below="@id/add_row_project_text" /> -->

	<ImageView
        android:id="@+id/add_row_imageView2"
        android:contentDescription="@null"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/add_row_medicine_type_input"
        android:scaleType="fitXY"
        android:src="@drawable/medicine_table_bg_light" />
        
    <TextView
        android:id="@+id/add_row_medicine_dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_row_imageView2"
        android:textColor="#FF444444"
        android:text="@string/medicines_title_dosage"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/add_row_medicine_dosage_input"
        android:layout_below="@id/add_row_medicine_dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" 
        android:hint="@string/medicines_hint_dosage" />
        
<!--     <Spinner -->
<!--         android:id="@+id/add_row_task_spinner" -->
<!--         android:layout_width="match_parent" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:layout_below="@id/add_row_medicine_dosage_input" /> -->
	<ImageView
        android:id="@+id/add_row_imageView3"
        android:contentDescription="@null"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/add_row_medicine_dosage_input"
        android:scaleType="fitXY"
        android:src="@drawable/medicine_table_bg_light" />
        
    <TextView
        android:id="@+id/add_row_medicine_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_row_imageView3"
        android:textColor="#FF444444"
        android:text="@string/medicines_title_unit"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/add_row_medicine_unit_input"
        android:layout_below="@id/add_row_medicine_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" 
        android:hint="@string/medicines_hint_unit" />
    
	<ImageView
        android:id="@+id/add_row_imageView4"
        android:contentDescription="@null"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/add_row_medicine_unit_input"
        android:scaleType="fitXY"
        android:src="@drawable/medicine_table_bg_light" />
    <TextView
        android:id="@+id/add_row_medicine_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_row_imageView4"
        android:textColor="#FF444444"
        android:text="@string/medicines_title_description"
        android:textAppearance="?android:attr/textAppearanceMedium" />        
    <EditText
        android:id="@+id/add_row_medicine_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:layout_below="@id/add_row_medicine_description"
        android:hint="@string/medicines_hint_description">
<!--         <requestFocus /> -->
    </EditText>
	
	<ImageView
        android:id="@+id/add_row_imageView5"
        android:contentDescription="@null"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/add_row_medicine_description_input"
        android:scaleType="fitXY"
        android:src="@drawable/medicine_table_bg_light" />
	
    <LinearLayout
        android:id="@+id/add_row_button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/add_row_imageView5"
        android:showDividers="middle" 
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/add_row_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_row_cancel_button" 
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1" />

        <Button
            android:id="@+id/add_row_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_row_add_button" 
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1" />

    </LinearLayout>
    
	<ImageView
        android:id="@+id/add_row_imageView6"
        android:contentDescription="@null"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/add_row_button_bar"
        android:scaleType="fitXY"
        android:src="@color/medicine_table_color_light" />

</RelativeLayout>