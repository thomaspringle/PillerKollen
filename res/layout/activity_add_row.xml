<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/add_row_medicine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicines_title_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF444444" />

            <EditText
                android:id="@+id/add_row_medicine_name_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/medicines_hint_name"
                android:inputType="text" >

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/add_row_imageView1"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/medicine_table_bg_light" />

            <TextView
                android:id="@+id/add_row_medicine_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicines_title_type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF444444" />

            <EditText
                android:id="@+id/add_row_medicine_type_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/medicines_hint_type"
                android:inputType="text" />

            <!-- <Spinner -->
            <!-- android:id="@+id/add_row_medicine_type_spinner" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_below="@id/add_row_project_text" /> -->

            <ImageView
                android:id="@+id/add_row_imageView2"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/medicine_table_bg_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <!-- <Spinner -->
                <!-- android:id="@+id/add_row_task_spinner" -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_below="@id/add_row_medicine_dosage_input" /> -->

                <TextView
                    android:id="@+id/add_row_medicine_dosage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/medicines_title_dosage"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FF444444" />

                <EditText
                    android:id="@+id/add_row_medicine_dosage_input"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_row_medicine_dosage"
                    android:ems="10"
                    android:hint="@string/medicines_hint_dosage"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/add_row_medicine_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/add_row_medicine_dosage"
                    android:text="@string/medicines_title_unit"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FF444444" />

                <EditText
                    android:id="@+id/add_row_medicine_unit_input"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/add_row_medicine_unit"
                    android:layout_below="@+id/add_row_medicine_unit"
                    android:ems="10"
                    android:hint="@string/medicines_hint_unit"
                    android:inputType="text" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/add_row_imageView4"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/medicine_table_bg_light" />

            <TextView
                android:id="@+id/add_row_medicine_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicines_title_description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF444444" />

            <EditText
                android:id="@+id/add_row_medicine_description_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/medicines_hint_description" >
            </EditText>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/medicine_table_bg_light" />

            <TextView
                android:id="@+id/add_row_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicines_title_schedule"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF444444" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/add_row_checkbox_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_row_time_1" />

                    <EditText
                        android:id="@+id/add_row_medicine_quantity1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:ems="10"
                        android:hint="@string/medicines_hint_quantity" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/add_row_schedule_bar"
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle" >

                <CheckBox
                    android:id="@+id/add_row_checkbox_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_row_time_1" />

                <CheckBox
                    android:id="@+id/add_row_checkbox_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_row_time_2" />

                <CheckBox
                    android:id="@+id/add_row_checkbox_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_row_time_3" />

                <CheckBox
                    android:id="@+id/add_row_checkbox_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_row_time_4" />
            </LinearLayout>

            <ImageView
                android:id="@+id/add_row_imageView5"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/medicine_table_bg_light" />

            <LinearLayout
                android:id="@+id/add_row_button_bar"
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle" >

                <Button
                    android:id="@+id/add_row_cancel_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_row_cancel_button" />

                <Button
                    android:id="@+id/add_row_add_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_row_add_button" />
            </LinearLayout>

            <ImageView
                android:id="@+id/add_row_imageView6"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@color/medicine_table_color_light" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>