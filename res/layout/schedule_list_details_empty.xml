<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingLeft="32dp"
    android:clickable="true"
    android:orientation="horizontal"
    android:gravity="left|center"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/medicine_name_text"
        style="@style/TextAppearance.ScheduleRowText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginLeft="8dp"
        android:gravity="left|center"
		android:singleLine="true"
        android:text="@string/medicines_hint_name_value"
        />

	<TextView
	    android:id="@+id/medicine_dosage_text"
	    style="@style/TextAppearance.ScheduleRowText"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="left"
	    android:layout_marginLeft="2dp"
	    android:layout_weight="2"
	    android:gravity="left"
	    android:singleLine="true"
	    android:text="@string/medicines_schedule_units_description_template" />

</LinearLayout> 